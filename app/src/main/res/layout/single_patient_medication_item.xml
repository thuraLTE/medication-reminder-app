<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:backgroundTint="@color/light_blue"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    android:elevation="10dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivType"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_capsule" />

            <TextView
                android:id="@+id/tvName"
                style="@style/SubTitleTextAppearance"
                android:textColor="@color/colorPrimaryVariant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:includeFontPadding="false"
                tools:text="Antibiotics" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDose"
                style="@style/BodyTextAppearance"
                android:textColor="@color/colorPrimaryVariant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2 " />

            <TextView
                android:id="@+id/tvUnit"
                style="@style/BodyTextAppearance"
                android:textColor="@color/colorPrimaryVariant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="capsule(s)" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvFrequency"
            style="@style/BodyTextAppearance"
            android:textColor="@color/colorPrimaryVariant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tools:text="x times daily / weekly" />

        <TextView
            android:id="@+id/tvDays"
            android:visibility="gone"
            android:textColor="@color/colorPrimaryVariant"
            style="@style/BodyTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tools:text="Mon, Tue, Wed" />

        <TextView
            android:id="@+id/tvTime"
            style="@style/BodyTextAppearance"
            android:textColor="@color/colorPrimaryVariant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tools:text="9:00 AM, 9:00 PM" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_schedule" />

            <TextView
                android:id="@+id/tvDuration"
                style="@style/BodyTextAppearance"
                android:textColor="@color/colorPrimaryVariant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                tools:text="Until dd/MM" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearIntakeAdvice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivIntakeAdvice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_info" />

            <TextView
                android:id="@+id/tvIntakeAdvice"
                style="@style/BodyTextAppearance"
                android:textColor="@color/colorPrimaryVariant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                tools:text="After meal" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>