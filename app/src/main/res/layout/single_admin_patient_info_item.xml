<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPatientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/SubTitleTextAppearance"
                android:textSize="22sp"
                android:textColor="@color/colorPrimaryVariant"
                tools:text="David Hirby"/>

            <TextView
                android:id="@+id/tvPatientId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BodyTextAppearance"
                android:textColor="@color/colorPrimaryVariant"
                tools:text="Pat_123456789"
                android:textStyle="italic"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tvPatientCase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BodyTextAppearance"
                android:textColor="@color/colorPrimaryVariant"
                tools:text="Diabetes"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tvPatientEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BodyTextAppearance"
                android:textColor="@color/colorPrimaryVariant"
                tools:text="davidhirby@gmail.com"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tvPatientPhNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BodyTextAppearance"
                android:textColor="@color/colorPrimaryVariant"
                tools:text="091234567"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDoctorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                style="@style/SubTitleTextAppearance"
                android:textColor="@color/colorPrimaryVariant"
                tools:text="John Wick"/>

            <TextView
                android:id="@+id/tvDoctorId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BodyTextAppearance"
                android:textColor="@color/colorPrimaryVariant"
                tools:text="Doc_123456789"
                android:textStyle="italic"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="10dp"/>

</LinearLayout>